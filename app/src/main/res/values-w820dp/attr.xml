<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="visible_tab_count" format="integer" />
    <attr name="lineColor" format="color" />
    <attr name="txtColor" format="color" />
    <attr name="txtSelectColor" format="color" />
    <declare-styleable name="ViewPagerIndicator">
        <attr name="visible_tab_count" />
        <attr name="lineColor" />
        <attr name="txtColor" />
        <attr name="txtSelectColor" />
    </declare-styleable>

    <!--下拉刷新控件的属性值-->
    <attr name="smart_ui_enable_pull_down" format="boolean" />
    <attr name="smart_ui_enable_pull_up" format="boolean" />
    <attr name="smart_ui_background" format="color|reference" />

    <declare-styleable name="SmartPullableLayout">
        <attr name="smart_ui_enable_pull_down" />
        <attr name="smart_ui_enable_pull_up" />
        <attr name="smart_ui_background" />
    </declare-styleable>
    <declare-styleable name="AVLoadingIndicatorView">
        <attr name="minWidth" format="dimension" />
        <attr name="maxWidth" format="dimension" />
        <attr name="minHeight" format="dimension" />
        <attr name="maxHeight" format="dimension" />
        <attr name="indicatorName" format="string" />
        <attr name="indicatorColor" format="color" />
    </declare-styleable>
</resources>